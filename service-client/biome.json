{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"files": {
		"ignore": ["public"]
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	},
	"overrides": [
		{
			"include": [
				"next.config.js",
				"layout.tsx",
				"page.tsx",
				"loading.tsx",
				"error.tsx",
				"not-found.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		}
	]
}
